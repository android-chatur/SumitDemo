<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abcd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/back"
    tools:context=".UI.Login">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topLayouts"
            android:layout_marginBottom="9dp">

            <LinearLayout
                android:id="@+id/l_layout_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/twitter_l"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo" />



                <TextView
                    android:id="@+id/emal_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="start|center"
                    android:fontFamily="sans-serif"
                    android:text="UserName."
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editText_email_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:gravity="start"
                    android:fontFamily="sans-serif"
                    android:textColorHint="@color/offwhite"

                    android:textColor="@color/black"
                    android:hint="Enter Username"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/pass_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="start|center"
                    android:text="Enter Password."
                    android:fontFamily="sans-serif"

                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/edit_pswd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:gravity="start"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"

                    android:textColorHint="@color/offwhite"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="15dp" />


                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/instagram_border_btn_2"
                    android:text="Login"
                    android:fontFamily="sans-serif"

                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btnclear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/instagram_border_btn_2"
                    android:text="Clear"
                    android:fontFamily="sans-serif"

                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />











            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>